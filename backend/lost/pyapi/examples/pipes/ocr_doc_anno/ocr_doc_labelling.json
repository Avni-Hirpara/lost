{
  "description": "This pipeline selects all images of a datasource and requests annotations.",
  "author": "Avni",
  "pipe-schema-version" : 1.0,
  "elements": [{
      "peN": 0,
      "peOut": [1],
      "datasource": {
        "type": "rawFile"
      }
    },
    {
      "peN": 1,
      "peOut": [2],
      "script": {
        "path": "request_annos.py",
        "description": "Request annotations for all images in a folder"
      }
    },
    {
      "peN": 2,
      "peOut": [3],
      "annoTask": {
        "name": "Image Annotation Task",
        "type": "sia",
        "instructions": "Please draw bounding boxes ,label them and put label value for all ROI in image.",
        "configuration": {
          "tools": {
              "point": true,
              "line": true,
              "polygon": true,
              "bbox": true,
              "junk": true
          },
          "annos":{
              "multilabels": false,
              "actions": {
                  "draw": true,
                  "label": true,
                  "edit": true
              },
              "minArea": 250
          },
          "img": {
              "multilabels": false,
              "actions": {
                  "label": true
              }
          }
        }
      }
    },
    {
      "peN": 3,
      "peOut": [4],
      "script": {
        "path": "export_json.py",
        "description": "Export all annotations to a csv file. Also create json with annotation for each image."
      }
    },
    {
      "peN": 4,
      "peOut": null,
      "dataExport": {}
    }
  ]
}